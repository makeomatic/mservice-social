{
  "id": "common.json",
  "definitions": {
    "id": {
      "type": "string",
      "description": "String id of status"
    },
    "feed": {
      "description": "list of registered social feeds",
      "type": "object",
      "required": ["id", "type", "attributes"],
      "properties": {
        "id": {
          "type": "string",
          "description": "internal auto-increment id"
        },
        "type": {
          "type": "string",
          "description": "type of entity",
          "enum": ["feed"]
        },
        "attributes": {
          "description": "feed properties",
          "type": "object",
          "properties": {
            "internal": {
              "type": "string",
              "description": "owner of the feed, in the future should ref organization"
            },
            "network": {
              "type": "string",
              "enum": ["twitter", "facebook", "instagram"],
              "description": "network for which this feed is returned"
            },
            "network_id": {
              "type": "string",
              "description": "internal network id of the feed"
            },
            "meta": {
              "type": "object",
              "description": "filter, which is used when returning data from the feed"
            }
          }
        }
      }
    },
    "status": {
      "description": "`tweet` object",
      "type": "object",
      "required": ["id", "type", "attributes"],
      "properties": {
        "id": {
          "$ref": "#/definitions/tweetId"
        },
        "type": {
          "type": "string",
          "enum": ["tweet", "facebook_status", "instagram_media"]
        },
        "attributes": {
          "description": "Status Properties",
          "type": "object",
          "properties": {
            "id": {
              "$ref": "#/definitions/id"
            },
            "date": {
              "type": "string",
              "format": "date",
              "description": "date posted"
            },
            "text": {
              "type": "string",
              "description": "status body (tweet body, facebook message, instagram description)"
            },
            "meta": {
              "type": "object",
              "description": "status data (depends on type)"
            }
          }
        }
      }
    },
    "collectionMeta": {
      "description": "Collection metadata",
      "type": "object",
      "additionalProperties": false,
      "required": ["count"],
      "properties": {
        "count": {
          "type": "integer",
          "description": "Number of results for current page"
        },
        "total": {
          "type": "integer",
          "description": "Total number of results"
        },
        "before": {
          "$ref": "#/definitions/id"
        },
        "cursor": {
          "$ref": "#/definitions/id"
        }
      }
    },
    "feedCollection": {
      "additionalProperties": false,
      "description": "Collection of feeds with metadata",
      "type": "object",
      "required": ["meta", "data"],
      "properties": {
        "meta": {
          "$ref": "#/definitions/collectionMeta"
        },
        "data": {
          "description": "Collection of feeds",
          "type": "array",
          "items": {
            "$ref": "#/definitions/feed"
          }
        }
      }
    },
    "statusCollection": {
      "additionalProperties": false,
      "description": "Collection of statuses with metadata",
      "type": "object",
      "required": ["meta", "data"],
      "properties": {
        "meta": {
          "$ref": "#/definitions/collectionMeta"
        },
        "data": {
          "description": "Collection of statuses",
          "type": "array",
          "items": {
            "$ref": "#/definitions/status"
          }
        }
      }
    }
  }
}
