{
  "$id": "common.json",
  "definitions": {
    "tweetId": {
      "type": "string",
      "pattern": "^\\d{1,20}$",
      "description": "64 bit tweet string id"
    },
    "list": {
      "description": "list of registered social feeds",
      "type": "object",
      "required": ["id", "type", "attributes"],
      "properties": {
        "id": {
          "type": "string",
          "description": "internal auto-increment id"
        },
        "type": {
          "type": "string",
          "description": "type of entity",
          "enum": ["feed"]
        },
        "attributes": {
          "description": "feed properties",
          "type": "object",
          "properties": {
            "internal": {
              "type": "string",
              "description": "owner of the feed, in the future should ref organization"
            },
            "network": {
              "type": "string",
              "enum": ["twitter"],
              "description": "network for which this feed is returned"
            },
            "network_id": {
              "type": "string",
              "description": "internal network id of the feed"
            },
            "filter": {
              "type": "object",
              "description": "filter, which is used when returning data from the feed"
            }
          }
        }
      }
    },
    "tweet": {
      "description": "`tweet` object",
      "type": "object",
      "required": ["id", "type", "attributes"],
      "properties": {
        "id": {
          "$ref": "#/definitions/tweetId"
        },
        "type": {
          "type": "string",
          "enum": ["tweet"]
        },
        "attributes": {
          "description": "Tweet Properties",
          "type": "object",
          "properties": {
            "id": {
              "$ref": "#/definitions/tweetId"
            },
            "date": {
              "type": "string",
              "format": "date",
              "description": "date posted"
            },
            "text": {
              "type": "string",
              "description": "tweet body"
            },
            "meta": {
              "type": "object",
              "properties": {
                "id_str": {
                  "type": "string",
                  "description": "original tweet id"
                },
                "account": {
                  "type": "string",
                  "description": "account feed owner"
                },
                "account_id": {
                  "type": "string",
                  "description": "account string id"
                },
                "entities": {
                  "type": "object",
                  "description": "meta information of the embedded tweet"
                }
              }
            }
          }
        }
      }
    },
    "tweetCollection": {
      "additionalProperties": false,
      "description": "Messages response",
      "type": "object",
      "required": ["meta", "data"],
      "properties": {
        "meta": {
          "$ref": "#/definitions/collectionMeta"
        },
        "data": {
          "description": "Collection of tweets",
          "type": "array",
          "items": {
            "$ref": "#/definitions/tweet"
          }
        }
      }
    },
    "collectionMeta": {
      "description": "Collection metadata",
      "type": "object",
      "additionalProperties": false,
      "required": ["count"],
      "properties": {
        "count": {
          "type": "integer",
          "description": "Count of results"
        },
        "before": {
          "$ref": "#/definitions/tweetId"
        },
        "cursor": {
          "$ref": "#/definitions/tweetId"
        }
      }
    },
    "listCollection": {
      "additionalProperties": false,
      "description": "Messages response",
      "type": "object",
      "required": ["meta", "data"],
      "properties": {
        "meta": {
          "$ref": "#/definitions/collectionMeta"
        },
        "data": {
          "description": "Collection of feeds",
          "type": "array",
          "items": {
            "$ref": "#/definitions/list"
          }
        }
      }
    },
    "twitter_stream_filters": {
      "additionalProperties": false,
      "description": "filters for realtime tweets",
      "type": "object",
      "properties": {
        "replies": {
          "type": "boolean",
          "default": false
        },
        "retweets": {
          "type": "boolean",
          "default": false
        },
        "userMentions": {
          "type": "boolean",
          "default": false
        },
        "skipValidAccounts": {
          "description": "skip filtering for valid accounts",
          "type": "boolean",
          "default": false
        }
      }
    },
    "twitter_api": {
      "additionalProperties": false,
      "description": "twitter api configuration",
      "type": "object",
      "properties": {
        "user_timeline": {
          "type": "object",
          "properties": {
            "exclude_replies": {
              "type": "boolean",
              "default": false
            },
            "include_rts": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    }
  }
}
