{
  "type": "object",
  "additionalProperties": false,
  "required": [ "filter" ],
  "properties": {
    "filter": {
      "description": "What to fetch, filters are cumulative (e.g. shows statuses for account id that have mentions)",
      "type": "object",
      "required": [ "network" ],
      "properties": {
        "network": {
          "description": "Network name",
          "type": "string",
          "enum": [ "twitter", "facebook", "instagram" ]
        },
        "account": {
          "description": "Account ID (for twitter â€” username) to fetch feed for",
          "type": "string"
        },
        "mentions": {
          "description": "Array of mentions to search for",
          "type": "array",
          "items": { "type": "string" }
        },
        "hashtags": {
          "description": "Array of hashtags to search for",
          "type": "array",
          "items": { "type": "string" }
        },
        "page": {
          "description": "Page number, 0 by default",
          "type": "integer",
          "default": 0
        },
        "pageSize": {
          "description": "Amount of items per page, 25 by default",
          "type": "integer",
          "default": 25
        },
        "cursor": {
          "description": "Pass biggest internal status id for consistent pagination",
          "type": "integer"
        },
        "order": {
          "type": "string",
          "enum": [ "desc", "asc" ],
          "default": "desc"
        }
      }
    }
  }
}
