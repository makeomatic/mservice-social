{
  "type": "object",
  "additionalProperties": false,
  "required": ["internal", "network", "accounts"],
  "properties": {
    "internal": {
      "description": "Internal ID to assign this feed to",
      "type": "string"
    },
    "network": {
      "description": "Social network to fetch feed from",
      "type": "string",
      "enum": ["twitter", "instagram", "facebook"]
    },
    "accounts": {
      "type": "array"
    }
  },
  "switch": [
    {
      "if": {
        "properties": {
          "network": {
            "constant": "instagram"
          }
        }
      },
      "then": {
        "properties": {
          "accounts": {
            "$ref": "instagram.json#/definitions/registerFeed"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "network": {
            "constant": "twitter"
          }
        }
      },
      "then": {
        "properties": {
          "accounts": {
            "$ref": "twitter.json#/definitions/registerFeed"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "network": {
            "constant": "facebook"
          }
        }
      },
      "then": {
        "properties": {
          "accounts": {
            "$ref": "facebook.json#/definitions/registerFeed"
          }
        }
      }
    }
  ]
}
