{
  "$id": "instagram.json",
  "definitions": {
    "accountId": {
      "type": "string",
      "description": "Identificator of `instagram` account"
    },
    "registerFeed": {
      "description": "Register a batch of accounts",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "username", "token"],
        "properties": {
          "id": {
            "$ref": "#/definitions/accountId"
          },
          "username": {
            "description": "User name",
            "type": "string"
          },
          "token": {
            "type": "string",
            "description": "User token"
          }
        }
      }
    },
    "config": {
      "type": "object",
      "required": ["enabled"],
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "syncMediaOnStart": {
          "type": "boolean",
          "default": true
        },
        "syncOnInterval": {
          "type": "boolean",
          "default": true
        },
        "syncInterval": {
          "type": "integer",
          "default": 60000,
          "minimum": 100
        },
        "client": {
          "type": "object",
          "required": ["id", "secret"],
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string"
            },
            "secret": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
